Checks: '*,-llvmlibc-*,-cppcoreguidelines-*,-fuchsia-*,-readability-convert-member-functions-to-static,modernize-use-trailing-return-type,-altera-unroll-loops,-readability-magic-numbers,-altera-struct-pack-align,-google-explicit-constructor,-misc-non-private-member-variables-in-classes,-cert-err58-cpp,-hicpp-explicit-conversions'
HeaderFilterRegex: '.*'
CheckOptions:
  - key:             readability-identifier-naming.ClassCase
    value:           lower_case
  - key:             readability-identifier-naming.EnumCase
    value:           lower_case
  - key:             readability-identifier-naming.FunctionCase
    value:           lower_case
  - key:             readability-identifier-naming.MemberCase
    value:           lower_case

  - key:             readability-identifier-naming.ParameterCase
    value:           lower_case
  - key:             readability-identifier-naming.UnionCase
    value:           lower_case
  - key:             readability-identifier-naming.VariableCase
    value:           lower_case
  - key:             readability-identifier-naming.LocalVariableCase
    value:           lower_case
  - key:             readability-identifier-naming.ConceptCase
    value:           lower_case
  - key:             readability-identifier-naming.ConceptSuffix
    value:           _template
FormatStyle: 'file'

